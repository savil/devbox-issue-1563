{
  "packages": [
    "nodejs@latest",
    "poetry@latest",
    "python3@latest"
  ],
  "env": {
    "__POETRY_PYPROJECT_DIR": "$PWD/service"
  },
  "shell": {
    "init_hook": [
      "echo 'Welcome to devbox!' > /dev/null"
    ],
    "scripts": {
      "install-service":[
        "cd service",
        "poetry install"
      ],
      "test": [
        "cd service && poetry run pytest"
      ]
    }
  }
}
